@model LicenseProject.ViewModels.RecommendationsViewModel
@{
    ViewData["Title"] = "Home Page";
}

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width height=device-height">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Welcome.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
@if (@HttpContextAccessor.HttpContext.User.Identity.Name != null){
     @if (@Model.RestaurantRecommended.Count > 0)
            {
                for (int i = 0; i < @Model.RestaurantRecommended.Count; i++)
                {
                    
                   @Model.RestaurantRecommended[i].Name<br /> <br />
                               
                }
            } 
        @if (@Model.TuristicObjectsRecommended.Count > 0)
            {
                for (int i = 0; i < @Model.TuristicObjectsRecommended.Count; i++)
                {
                    
                   @Model.TuristicObjectsRecommended[i].Name<br /> <br />
                               
                }
            } 
            
            <div class="row">
                @{
                    foreach (var item in Model.RestaurantsInCity)
                    {
                        @Html.Partial("RestaurantsSummary", item)
                    }
                }
            </div>
            <div class="row">
                @{
                    foreach (var item in Model.ClosestTuristicObjects)
                    {
                        @Html.Partial("TuristicObjectsSummary", item)
                    }
                }
            </div>
        }
   
       <div class="row">
        @{
          foreach (var item in Model.TopTuristicObjects)
          {
           @Html.Partial("TuristicObjectsSummary", item)
          }
        }
       </div>
       
</body>
</html>